<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:background="@color/main_background"
    android:paddingBottom="8dp">

    <ImageView
        android:id="@+id/img_item_movie"
        android:layout_width="100dp"
        android:layout_height="160dp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_round_person_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_item_movie_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:lines="2"
        android:maxLines="2"
        android:text="title"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/img_item_movie"
        app:layout_constraintStart_toStartOf="@+id/img_item_movie"
        app:layout_constraintTop_toBottomOf="@+id/img_item_movie" />

    <ImageView
        android:id="@+id/img_star_item_movie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:src="@drawable/ic_round_star_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_item_movie_title"
        app:tint="#ffc107" />

    <TextView
        android:maxLength="3"
        android:id="@+id/txt_score_movie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:text="score"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/img_star_item_movie"
        app:layout_constraintStart_toEndOf="@+id/img_star_item_movie"
        app:layout_constraintTop_toTopOf="@+id/img_star_item_movie" />

</androidx.constraintlayout.widget.ConstraintLayout>